# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/geetaverse?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long-change-this
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=*

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Stripe (Optional - for payment features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_PRICE_ID=price_your_price_id

# OpenRouter AI (Optional - for AI features)
# Get your FREE API key from: https://openrouter.ai/keys
OPENAI_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENAI_MODEL=tngtech/deepseek-r1t2-chimera:free
OPENAI_SITE_URL=https://geetaverse.com
OPENAI_SITE_NAME=GeetaVerse

# Email (Optional - for email verification, future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=GeetaVerse <noreply@geetaverse.com>
